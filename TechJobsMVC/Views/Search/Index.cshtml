<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{//TODO #4: Loop over the search results to display all job fields.
    }

    @if (ViewBag.jobs != null)
    {
        @foreach (var entry in ViewBag.jobs)
        {
            <table class="centeredTable job-listing">
                <tbody>
                    <tr>
                        <td>
                            <span>ID: </span>
                        </td>
                        <td>
                            <span>@entry.Id</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Name: </span>
                        </td>
                        <td>
                            <span>@entry.Name</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Employer: </span>
                        </td>
                        <td>
                            <span>@entry.Employer</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Location: </span>
                        </td>
                        <td>
                            <span>@entry.Location</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Position Type: </span>
                        </td>
                        <td>
                            <span>@entry.PositionType</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>Skill: </span>
                        </td>
                        <td>
                            <span>@entry.CoreCompetency</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>